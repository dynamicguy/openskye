<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="Default" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>org.openskye.domain.User</class>
        <class>org.openskye.domain.UserRole</class>
        <class>org.openskye.domain.Role</class>
        <class>org.openskye.domain.ArchiveStoreInstance</class>
        <class>org.openskye.domain.AttributeInstance</class>
        <class>org.openskye.domain.AuditEvent</class>
        <class>org.openskye.domain.AttributeDefinition</class>
        <class>org.openskye.domain.AuditLog</class>
        <class>org.openskye.domain.AuditLogProperty</class>
        <class>org.openskye.domain.Channel</class>
        <class>org.openskye.domain.ChannelFilterDefinition</class>
        <class>org.openskye.domain.ChannelArchiveStore</class>
        <class>org.openskye.domain.Domain</class>
        <class>org.openskye.domain.ArchiveStoreDefinition</class>
        <class>org.openskye.domain.InformationStoreDefinition</class>
        <class>org.openskye.domain.MetadataTemplate</class>
        <class>org.openskye.domain.Permission</class>
        <class>org.openskye.domain.Project</class>
        <class>org.openskye.domain.RetentionPolicy</class>
        <class>org.openskye.domain.RolePermission</class>
        <class>org.openskye.domain.Task</class>
        <class>org.openskye.domain.TaskLog</class>
        <class>org.openskye.domain.TaskStatistics</class>
        <class>org.openskye.domain.ChannelFilterDefinition</class>
        <class>org.openskye.metadata.impl.jpa.JPAObjectSet</class>
        <class>org.openskye.metadata.impl.jpa.JPAObjectMetadata</class>
        <properties>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="hbase">
        <provider>com.impetus.kundera.KunderaPersistence</provider>
        <class>org.openskye.hadoop.objects.HUnstructuredObject</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="kundera.nodes" value="localhost.localdomain"/>
            <property name="kundera.port" value="7182"/>
            <property name="kundera.dialect" value="hbase"/>
            <property name="kundera.keyspace" value="skye"/>
            <property name="kundera.client.lookup.class" value="com.impetus.client.hbase.HBaseClientFactory" />
            <property name="kundera.cache.provider.class" value="com.impetus.kundera.cache.ehcache.EhCacheProvider"/>
            <property name="kundera.cache.config.resource" value="/ehcache-test.xml"/>
            <property name="kundera.ddl.auto.prepare" value="update" />
            <property name="kundera.client.property" value="/etc/hbase/conf/hbase-site.xml" />
            <property name="hbase.zookeeper.quorum" value="localhost.localdomain" />
            <property name="hbase.zookeeper.property.clientPort" value="2181" />
        </properties>
    </persistence-unit>
</persistence>
